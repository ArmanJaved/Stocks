<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:paddingRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#607d8b">



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_weight="1"
                    android:hint="Search ticker"
                    android:textColor="#fff"
                    android:id="@+id/rlt_stock"
                    android:textColorHint="#fff"
                    android:drawableRight="@android:drawable/ic_menu_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />



            </LinearLayout>

        </android.support.v7.widget.Toolbar>



        <com.mindorks.placeholderview.PlaceHolderView
            android:id="@+id/galleryView"
            android:visibility="gone"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"/>


        <LinearLayout
            android:visibility="gone"
            android:background="#607d8b"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">


            <LinearLayout
                android:id="@+id/stocksymbol"
                android:layout_weight="1"
                android:background="@drawable/border_set2"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <ImageView
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_show_chart_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>



            <LinearLayout
                android:id="@+id/watchlistsymobol"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <ImageView
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_watch_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>





        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:fillViewport="false">

        <LinearLayout

            android:id="@+id/snackbar_id"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:id="@+id/tv_stock_name"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="AAME"
                    android:textColor="#3d3d3d"
                    android:textStyle="bold"
                    android:textSize="14sp"/>


            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/asd"
                android:layout_weight="1"
                android:background="@drawable/border_set"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView

                    android:id="@+id/d1"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1D"
                    android:textColor="#3d3d3d"
                    android:textStyle="bold"
                    android:textSize="19sp"/>

                <TextView
                    android:id="@+id/w1"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1W"
                    android:textColor="#3d3d3d"
                    android:textStyle="bold"
                    android:textSize="19sp"/>
                <TextView
                    android:id="@+id/m1"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3M"
                    android:textColor="#3d3d3d"
                    android:textStyle="bold"
                    android:textSize="19sp"/>

                <TextView
                    android:id="@+id/y1"
                    android:textAlignment="center"

                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1Y"
                    android:textColor="#3d3d3d"
                    android:textStyle="bold"
                    android:textSize="19sp"/>
                <TextView

                    android:id="@+id/y5"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5Y"
                    android:textColor="#3d3d3d"
                    android:textStyle="bold"
                    android:textSize="19sp"/>

                <TextView

                    android:id="@+id/all"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All"
                    android:textColor="#3d3d3d"
                    android:textStyle="bold"
                    android:textSize="19sp"/>
            </LinearLayout>


                <TextView

                    android:layout_weight="1"
                    android:text=""
                    android:paddingRight="10dp"
                    android:textAlignment="textEnd"
                    android:id="@+id/percentage_symbol"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="#3d3d3d"
                    android:textStyle="normal"
                    android:textSize="14sp"/>

            </LinearLayout>








<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
                <com.github.mikephil.charting.charts.CandleStickChart
                    android:id="@+id/chart"
                    android:layout_width="match_parent"
                    android:layout_height="220dp">
                </com.github.mikephil.charting.charts.CandleStickChart>
    <LinearLayout
        android:alpha="0.8"
        android:id="@+id/llt_markerview"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:background="#607d8b"
        android:layout_marginLeft="40dp"
        android:visibility="gone"
        android:layout_marginTop="30dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/x_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open: 0.0000"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="8sp"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/tv_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open: 0.0000"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="8sp"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/tv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close: 0.0000"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="8sp"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/tv_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High: 0.0000"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="8sp"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/tv_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Low: 0.0000"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="8sp"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/tv_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volume: 50K"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="8sp"
            android:textStyle="normal" />
    </LinearLayout>

</RelativeLayout>
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/chart1"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />





        <Button
            android:visibility="gone"
            android:id="@+id/watch_list"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Add to Watchlist"
            android:textColor="#607d8b"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:background="@drawable/my_button_bg"
            />
    </LinearLayout>

        </ScrollView>

    </LinearLayout>






    <FrameLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@android:color/white">
        <com.mindorks.placeholderview.PlaceHolderView
            android:id="@+id/drawerView"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"/>
    </FrameLayout>

</android.support.v4.widget.DrawerLayout>



