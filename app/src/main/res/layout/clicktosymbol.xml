<?xml version="1.0" encoding="utf-8"?>


<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

       <TextView
           android:padding="10dp"
           android:textAlignment="textStart"
           android:textColor="#fff"
           android:textSize="30dp"
           android:textStyle="bold"
           android:text="X"
           android:id="@+id/back_click"
           android:background="#607d8b"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />



        <com.mindorks.placeholderview.PlaceHolderView
            android:id="@+id/galleryView"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"/>




        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/daily"
                android:layout_weight="1"
                android:padding="10dp"
                android:textSize="14sp"
                android:textColor="#000"
                android:text="Daily"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/weekly"
                android:layout_weight=".0101"
                android:padding="10dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="Weekly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/monthly"
                android:layout_weight="1"
                android:padding="10dp"
                android:textSize="14sp"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="Monthly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/intra_Text"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="#78201e"
                android:text="Intraday"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/Intradaytime"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_width="130dp"
                android:layout_height="wrap_content">



                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:id="@+id/spinner1"
                    android:layout_margin="10dp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:entries="@array/country_arrays"
                    android:textSize="25sp"/>

            </LinearLayout>


        </LinearLayout>


        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:fillViewport="false">

        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/asd"
                android:background="@drawable/border_set"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView

                    android:id="@+id/d1"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1D"
                    android:textColor="#3d3d3d"
                    android:textStyle="bold"
                    android:textSize="19sp"/>

                <TextView
                    android:id="@+id/w1"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1W"
                    android:textColor="#3d3d3d"
                    android:textStyle="bold"
                    android:textSize="19sp"/>
                <TextView
                    android:id="@+id/m1"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3M"
                    android:textColor="#3d3d3d"
                    android:textStyle="bold"
                    android:textSize="19sp"/>

                <TextView
                    android:id="@+id/y1"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1Y"
                    android:textColor="#3d3d3d"
                    android:textStyle="bold"
                    android:textSize="19sp"/>
                <TextView

                    android:id="@+id/y5"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5Y"
                    android:textColor="#3d3d3d"
                    android:textStyle="bold"
                    android:textSize="19sp"/>

                <TextView

                    android:id="@+id/all"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All"
                    android:textColor="#3d3d3d"
                    android:textStyle="bold"
                    android:textSize="19sp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:id="@+id/tv_stock_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AAME"
                    android:textColor="#3d3d3d"
                    android:textStyle="bold"
                    android:textSize="19sp"/>
                <TextView

                    android:layout_weight="1"
                    android:paddingRight="10dp"
                    android:textAlignment="textEnd"
                    android:id="@+id/percentage_symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#3d3d3d"
                    android:textStyle="bold"
                    android:textSize="19sp"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.github.mikephil.charting.charts.CandleStickChart
                    android:layout_marginTop="10dp"
                    android:id="@+id/chart"
                    android:layout_width="match_parent"
                    android:layout_height="240dp">
                </com.github.mikephil.charting.charts.CandleStickChart>
                <LinearLayout
                    android:id="@+id/llt_markerview"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:background="#607d8b"
                    android:layout_marginLeft="40dp"
                    android:visibility="gone"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/x_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Open: 0.0000"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="8sp"
                        android:textStyle="normal" />
                    <TextView
                        android:id="@+id/tv_open"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Open: 0.0000"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="8sp"
                        android:textStyle="normal" />
                    <TextView
                        android:id="@+id/tv_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Close: 0.0000"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="8sp"
                        android:textStyle="normal" />
                    <TextView
                        android:id="@+id/tv_high"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="High: 0.0000"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="8sp"
                        android:textStyle="normal" />
                    <TextView
                        android:id="@+id/tv_low"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Low: 0.0000"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="8sp"
                        android:textStyle="normal" />
                    <TextView
                        android:id="@+id/tv_volume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Volume: 50K"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textAlignment="center"
                        android:textColor="#fff"
                        android:textSize="8sp"
                        android:textStyle="normal" />
                </LinearLayout>

            </RelativeLayout>


                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/chart1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />


    </LinearLayout>

        </ScrollView>

    </LinearLayout>






    <FrameLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@android:color/white">
        <com.mindorks.placeholderview.PlaceHolderView
            android:id="@+id/drawerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"/>
    </FrameLayout>

</android.support.v4.widget.DrawerLayout>



